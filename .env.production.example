# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# Database Configuration
DB_USER=travel_life_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=travel_life
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=5000
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_DIFFERENT_STRONG_RANDOM_SECRET

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://your-domain.com:5000/api
VITE_UPLOAD_URL=http://your-domain.com:5000/uploads

# Nominatim Configuration
NOMINATIM_URL=http://nominatim:8080
NOMINATIM_PORT=8080
NOMINATIM_PBF_URL=https://download.geofabrik.de/north-america/us-latest.osm.pbf
NOMINATIM_REPLICATION_URL=https://download.geofabrik.de/north-america/us-updates/

# Optional: Immich Integration
IMMICH_API_URL=
IMMICH_API_KEY=

# Optional: Weather API
OPENWEATHERMAP_API_KEY=

# Optional: Flight Tracking
AVIATIONSTACK_API_KEY=

# OpenRouteService (Recommended for accurate road distance calculations)
# Get a free API key at: https://openrouteservice.org/dev/#/signup
# Free tier: 2,000 requests/day (sufficient for personal use)
# Without this key, car/bike distances will use straight-line calculations
OPENROUTESERVICE_API_KEY=
# OPENROUTESERVICE_URL=https://api.openrouteservice.org  # Default, only change for self-hosted
