# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://travel_life_user:password@localhost:5432/travel_life?schema=public

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration (for secure refresh token storage)
# COOKIE_SAME_SITE=strict    # Options: strict, lax, none (default: strict)
# COOKIE_DOMAIN=             # e.g., .example.com for subdomain support

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Immich Integration
IMMICH_API_URL=http://your-immich-instance/api
IMMICH_API_KEY=your-immich-api-key

# OpenWeatherMap API
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# AviationStack API
AVIATIONSTACK_API_KEY=your-aviationstack-api-key

# Nominatim (Self-hosted)
NOMINATIM_URL=http://localhost:8080

# OpenRouteService (Required for accurate road distance calculations)
# Get a free API key at: https://openrouteservice.org/dev/#/signup
# Free tier: 2,000 requests/day (sufficient for personal use)
# Without this key, car/bike distances will use straight-line calculations
OPENROUTESERVICE_API_KEY=your-openrouteservice-api-key
# OPENROUTESERVICE_URL=https://api.openrouteservice.org  # Default, only change for self-hosted

# Email (SMTP) Configuration - Required for sending user invitations
# Common providers:
#   Gmail: smtp.gmail.com (port 587, use App Password)
#   Outlook: smtp.office365.com (port 587)
#   SendGrid: smtp.sendgrid.net (port 587)
#   Mailgun: smtp.mailgun.org (port 587)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false                           # true for port 465, false for other ports
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password             # For Gmail, use App Password, not your regular password
SMTP_FROM=Travel Life <noreply@example.com> # From address shown in invitation emails

# Frontend URL (used for invitation links in emails)
FRONTEND_URL=http://localhost:3000
